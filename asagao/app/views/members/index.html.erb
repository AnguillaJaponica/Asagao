<% @page_title = "Membership list"%>
<h1><%= @page_title%></h1>

<% if @members.present? %>
    <table class = "list">
        <thead>
            <tr>
                <tr>number </tr>
                <tr>username </tr>
                <tr>real name </tr>
            </tr>
        </thead>
        <tbody>
            <% @members.each do |member| %>
                <tr>
                    <td style="text-align: right"><%= member.number %></td>
                    <td><%= member.name %></td>
                    <td><%= member.full_name %></td>
                </tr>
            <%end%>
        </tbody>
    </table>
<% else %>
    <p>No Membership data!</p>
<% end %>
